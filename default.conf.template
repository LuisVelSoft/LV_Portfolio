server {
    listen ${PORT};
    listen [::]:${PORT};

    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # Serve SPA routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    location /assets/ {
        try_files $uri =404;
    }

    # Return index for 404 so client-side routing works
    error_page 404 /index.html;
}
